{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "customConditions": ["@soda-gql"],
    // NOTE: These paths are only available on `tests` and `scripts` directories.
    // In order to make bun test pass, we need to put these paths here, as well.
    // To avoid duplicated management, tsconfig.editor.json is extended with this file.
    "paths": {
      "@soda-gql/builder/*": ["./packages/builder/src/*"],
      "@soda-gql/cli/*": ["./packages/cli/src/*"],
      "@soda-gql/codegen/*": ["./packages/codegen/src/*"],
      "@soda-gql/common/*": ["./packages/common/src/*"],
      "@soda-gql/config/*": ["./packages/config/src/*"],
      "@soda-gql/core/*": ["./packages/core/src/*"],
      "@soda-gql/babel-plugin/*": ["./packages/babel-plugin/src/*"],
      "@soda-gql/babel-transformer/*": ["./packages/babel-transformer/src/*"],
      "@soda-gql/plugin-common/*": ["./packages/plugin-common/src/*"],
      "@soda-gql/tsc-plugin/*": ["./packages/tsc-plugin/src/*"],
      "@soda-gql/tsc-transformer/*": ["./packages/tsc-transformer/src/*"],
      "@soda-gql/swc-transformer/*": ["./packages/swc-transformer/src/*"],
      "@soda-gql/runtime/*": ["./packages/runtime/src/*"],
      "@soda-gql/webpack-plugin/*": ["./packages/webpack-plugin/src/*"],
      "@soda-gql/metro-plugin/*": ["./packages/metro-plugin/src/*"],
      "@soda-gql/vite-plugin/*": ["./packages/vite-plugin/src/*"]
    }
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.editor.json" },
    { "path": "./packages/builder/tsconfig.editor.json" },
    { "path": "./packages/cli/tsconfig.editor.json" },
    { "path": "./packages/codegen/tsconfig.editor.json" },
    { "path": "./packages/common/tsconfig.editor.json" },
    { "path": "./packages/config/tsconfig.editor.json" },
    { "path": "./packages/core/tsconfig.editor.json" },
    { "path": "./packages/babel-plugin/tsconfig.editor.json" },
    { "path": "./packages/babel-transformer/tsconfig.editor.json" },
    { "path": "./packages/plugin-common/tsconfig.editor.json" },
    { "path": "./packages/tsc-plugin/tsconfig.editor.json" },
    { "path": "./packages/tsc-transformer/tsconfig.editor.json" },
    { "path": "./packages/swc-transformer/tsconfig.editor.json" },
    { "path": "./packages/runtime/tsconfig.editor.json" },
    { "path": "./packages/webpack-plugin/tsconfig.editor.json" },
    { "path": "./packages/metro-plugin/tsconfig.editor.json" },
    { "path": "./packages/vite-plugin/tsconfig.editor.json" },
    { "path": "./examples/babel-app/tsconfig.editor.json" }
  ]
}

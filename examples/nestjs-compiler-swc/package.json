{
  "name": "@soda-gql-examples/nestjs-compiler-swc",
  "version": "0.0.1",
  "private": true,
  "description": "NestJS example using SWC compiler plugin for soda-gql",
  "scripts": {
    "codegen": "soda-gql codegen --schema:default ./schema.graphql --out ./graphql-system/index.ts --scalar:default ./inject-module/runtime-adapter.ts --runtime-adapter:default ./inject-module/runtime-adapter.ts",
    "artifact": "soda-gql builder --mode zero-runtime --entry ./src/**/*.ts --out ./.cache/soda-gql-artifact.json",
    "build": "nest build",
    "dev": "nest start --watch",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@soda-gql/core": "workspace:*",
    "@soda-gql/runtime": "workspace:*",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@soda-gql/cli": "workspace:*",
    "@soda-gql/plugin-swc": "workspace:*",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}

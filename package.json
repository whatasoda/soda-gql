{
  "name": "soda-gql",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "prepublish": "bun run scripts/prepublish.ts",
    "publish-npm": "bun scripts/publish.ts",
    "publish-npm:dry-run": "bun scripts/publish.ts --dry-run",
    "publish-npm:provenance": "bun scripts/publish.ts --provenance",
    "typecheck": "tsc -b",
    "biome:check": "biome check --write .",
    "validate:tests": "bun run scripts/validate-tests.ts",
    "quality": "bun run validate:tests && bun run typecheck && bun run biome:check",
    "exports:sync": "bun scripts/sync-exports.ts",
    "build": "bun run exports:sync && bunx tsdown",
    "build:watch": "bunx tsdown --watch",
    "test": "bun --conditions=development test",
    "clean:dist": "find packages -name dist -type d -prune -exec rm -rf {} +",
    "soda-gql": "bun run packages/cli/src/index.ts",
    "fixture:setup": "bun soda-gql codegen --out tests/fixtures/runtime-app/graphql-system/index.ts --schema:default tests/fixtures/runtime-app/schema.graphql --scalar:default tests/fixtures/inject-module/default-scalar.ts --runtime-adapter:default tests/fixtures/inject-module/default-runtime-adapter.ts",
    "examples:codegen": "cd examples/babel-app && bun run codegen && cd ../nestjs-app && bun run codegen",
    "perf:builder": "bun run scripts/perf/collect-builder-metrics.ts",
    "cleanup": "rm -rf .cache tests/.tmp"
  },
  "devDependencies": {
    "@babel/core": "*",
    "@babel/parser": "*",
    "@babel/traverse": "*",
    "@babel/types": "*",
    "@biomejs/biome": "2.2.3",
    "@soda-gql/builder": "workspace:*",
    "@soda-gql/cli": "workspace:*",
    "@soda-gql/codegen": "workspace:*",
    "@soda-gql/common": "workspace:*",
    "@soda-gql/config": "workspace:*",
    "@soda-gql/core": "workspace:*",
    "@soda-gql/plugin-babel": "workspace:*",
    "@soda-gql/plugin-swc": "workspace:*",
    "@soda-gql/tsc-plugin": "workspace:*",
    "@soda-gql/runtime": "workspace:*",
    "@swc-node/register": "^1.11.1",
    "@swc/core": "^1.0.0",
    "@swc/types": "^0.1.0",
    "@types/babel__core": "^7.20.5",
    "@types/babel__traverse": "^7.20.6",
    "@types/babel__parser": "^7.1.5",
    "@types/bun": "latest",
    "@types/node": "^24.7.2",
    "graphql": "^16.8.1",
    "tsdown": "^0.15.7",
    "typescript": "^5.9.2",
    "zod": "^4.1.11"
  },
  "patchedDependencies": {
    "@swc/core@1.13.5": "patches/@swc%2Fcore@1.13.5.patch"
  },
  "resolutions": {
    "typescript": "5.9.2"
  }
}

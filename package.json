{
  "name": "soda-gql",
  "version": "0.5.3",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "playgrounds/*",
    "website"
  ],
  "scripts": {
    "prepublish": "bun run scripts/prepublish.ts",
    "publish-local": "bun scripts/publish-local.ts",
    "quality:prepare": "bun fixture:setup && bun exports:sync",
    "quality": "bun run typecheck && bun run biome:check",
    "typecheck": "tsc -b",
    "biome:check": "biome check --write .",
    "exports:sync": "bun scripts/sync-exports.ts",
    "build": "bun run --filter=@soda-gql/swc-transformer build:dev && bun run exports:sync && bunx tsdown",
    "build:release": "bun run --filter=@soda-gql/swc-transformer build && bun run exports:sync && bunx tsdown",
    "test": "bun --conditions=@soda-gql test",
    "test:coverage": "bun --conditions=@soda-gql test --coverage",
    "clean:dist": "find packages -name dist -type d -prune -exec rm -rf {} +",
    "soda-gql": "bun --conditions=@soda-gql packages/cli/src/index.ts",
    "fixture:setup": "bun soda-gql codegen --config tests/codegen-fixture/soda-gql.config.ts",
    "perf:builder": "bun run scripts/perf/collect-builder-metrics.ts",
    "perf:transformer": "bun run perf-measures/transformer/scripts/run.ts",
    "perf:typecheck": "bun run perf-measures/type-check/scripts/run.ts",
    "perf:typecheck:generate": "bun run perf-measures/type-check/scripts/run.ts --generate",
    "cleanup": "rm -rf .cache tests/.tmp",
    "website:dev": "bun run --filter=@soda-gql/website dev",
    "website:build": "bun run --filter=@soda-gql/website build"
  },
  "devDependencies": {
    "@babel/core": "*",
    "@babel/parser": "*",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/traverse": "*",
    "@babel/types": "*",
    "@biomejs/biome": "2.2.3",
    "@soda-gql/babel-plugin": "workspace:*",
    "@soda-gql/babel-transformer": "workspace:*",
    "@soda-gql/builder": "workspace:*",
    "@soda-gql/cli": "workspace:*",
    "@soda-gql/codegen": "workspace:*",
    "@soda-gql/colocation-tools": "workspace:*",
    "@soda-gql/common": "workspace:*",
    "@soda-gql/config": "workspace:*",
    "@soda-gql/core": "workspace:*",
    "@soda-gql/runtime": "workspace:*",
    "@soda-gql/swc-transformer": "workspace:*",
    "@soda-gql/tsc-plugin": "workspace:*",
    "@soda-gql/tsc-transformer": "workspace:*",
    "@soda-gql/webpack-plugin": "workspace:*",
    "@swc/core": "^1.0.0",
    "@swc/types": "^0.1.0",
    "@types/babel__core": "^7.20.5",
    "@types/babel__parser": "^7.1.5",
    "@types/babel__traverse": "^7.20.6",
    "@types/bun": "1.3.0",
    "@types/node": "^24.7.2",
    "graphql": "^16.8.1",
    "neverthrow": "^8.2.0",
    "tsdown": "^0.17.4",
    "typescript": "^5.9.2",
    "zod": "^4.1.11"
  },
  "patchedDependencies": {
    "@swc/core@1.13.5": "patches/@swc%2Fcore@1.13.5.patch"
  },
  "resolutions": {
    "typescript": "5.9.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  }
}

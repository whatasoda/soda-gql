{
  "name": "soda-gql",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "typecheck": "tsc -b",
    "biome:check": "biome check --write .",
    "quality": "bun run biome:check && bun run typecheck",
    "soda-gql": "bun run packages/cli/src/index.ts",
    "fixture:setup": "bun soda-gql codegen --schema tests/fixtures/runtime-app/schema.graphql --out tests/fixtures/runtime-app/graphql-system/index.ts --inject-from tests/fixtures/inject-module/default-inject.ts",
    "fixture:setup2": "bun soda-gql codegen --out tests/fixtures/runtime-app/graphql-system/index.ts --schema:default tests/fixtures/runtime-app/schema.graphql --scalar:default tests/fixtures/inject-module/default-scalar.ts --runtime-adapter:default tests/fixtures/inject-module/default-runtime-adapter.ts",
    "cleanup": "rm -rf .cache tests/.tmp"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@types/bun": "latest",
    "typescript": "^5.9.2",
    "zod": "^4.1.5"
  }
}

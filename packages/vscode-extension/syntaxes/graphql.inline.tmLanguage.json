{
  "scopeName": "inline.graphql",
  "injectionSelector": "L:source.ts, L:source.tsx",
  "patterns": [
    {
      "name": "meta.embedded.block.graphql",
      "contentName": "source.graphql",
      "begin": "\\b(query|mutation|subscription|fragment)(\\([^)]*\\))?\\s*`",
      "end": "`",
      "beginCaptures": {
        "1": {
          "name": "entity.name.tag.graphql"
        }
      },
      "patterns": [
        {
          "name": "keyword.operation.graphql",
          "match": "\\b(query|mutation|subscription|fragment|type|interface|enum|union|input|scalar|schema|extend|implements)\\b"
        },
        {
          "name": "storage.type.graphql",
          "match": "\\b(Int|Float|String|Boolean|ID)\\b"
        },
        {
          "name": "comment.line.graphql",
          "match": "#.*$"
        },
        {
          "name": "string.quoted.double.graphql",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.graphql",
              "match": "\\\\."
            }
          ]
        }
      ]
    }
  ]
}

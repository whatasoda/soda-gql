{
  "name": "@soda-gql/swc",
  "version": "0.11.16",
  "description": "SWC-based native transformer for soda-gql",
  "type": "module",
  "private": false,
  "license": "MIT",
  "author": {
    "name": "Shota Hatada",
    "email": "shota.hatada@whatasoda.me",
    "url": "https://github.com/whatasoda"
  },
  "keywords": [
    "graphql",
    "codegen",
    "zero-runtime",
    "typescript",
    "swc",
    "transformer",
    "native"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/whatasoda/soda-gql.git",
    "directory": "packages/swc"
  },
  "homepage": "https://github.com/whatasoda/soda-gql#readme",
  "bugs": {
    "url": "https://github.com/whatasoda/soda-gql/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist",
    "index.d.ts",
    "index.js",
    "native.d.ts",
    "native.js",
    "src"
  ],
  "napi": {
    "name": "swc",
    "triples": {
      "defaults": true,
      "additional": [
        "aarch64-unknown-linux-gnu",
        "aarch64-unknown-linux-musl",
        "x86_64-unknown-linux-musl"
      ]
    }
  },
  "scripts": {
    "build": "napi build src/native --platform --release --js index.js --dts index.d.ts && bun run scripts/patch-napi-output.ts",
    "build:debug": "napi build src/native --platform --js index.js --dts index.d.ts && bun run scripts/patch-napi-output.ts",
    "build:dev": "bun run scripts/build-if-stale.ts",
    "prepublishOnly": "napi prepublish -t npm",
    "artifacts": "napi artifacts",
    "pretest": "bun run build:dev",
    "test": "bun test"
  },
  "dependencies": {
    "@ampproject/remapping": "^2.3.0",
    "@soda-gql/builder": "workspace:*",
    "@soda-gql/common": "workspace:*",
    "@soda-gql/config": "workspace:*",
    "@soda-gql/core": "workspace:*"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4",
    "@soda-gql/tsc": "workspace:*",
    "prettier": "^3.4.2"
  },
  "peerDependencies": {
    "@swc/core": "^1.0.0"
  },
  "exports": {
    "./native": {
      "@soda-gql": "./@x-native.ts",
      "types": "./dist/native.d.mts",
      "import": "./dist/native.mjs",
      "require": "./dist/native.cjs",
      "default": "./dist/native.mjs"
    },
    ".": {
      "@soda-gql": "./@x-index.ts",
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "module": "./dist/index.mjs"
}

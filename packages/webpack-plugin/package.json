{
  "name": "@soda-gql/webpack-plugin",
  "version": "0.2.0",
  "description": "Webpack plugin for soda-gql with HMR support",
  "type": "module",
  "private": false,
  "license": "MIT",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Shota Hatada",
    "email": "shota.hatada@whatasoda.me",
    "url": "https://github.com/whatasoda"
  },
  "keywords": [
    "graphql",
    "codegen",
    "zero-runtime",
    "typescript",
    "webpack",
    "webpack-plugin",
    "hmr"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/whatasoda/soda-gql.git",
    "directory": "packages/webpack-plugin"
  },
  "homepage": "https://github.com/whatasoda/soda-gql#readme",
  "bugs": {
    "url": "https://github.com/whatasoda/soda-gql/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "@soda-gql": "./@x-index.ts",
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./loader": {
      "@soda-gql": "./@x-loader.ts",
      "types": "./dist/loader.d.mts",
      "import": "./dist/loader.mjs",
      "require": "./dist/loader.cjs",
      "default": "./dist/loader.mjs"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@soda-gql/builder": "workspace:*",
    "@soda-gql/common": "workspace:*",
    "@soda-gql/config": "workspace:*",
    "@soda-gql/core": "workspace:*",
    "@soda-gql/plugin-common": "workspace:*",
    "@soda-gql/babel-transformer": "workspace:*"
  },
  "devDependencies": {
    "@soda-gql/swc-transformer": "workspace:*"
  },
  "peerDependencies": {
    "webpack": "^5.0.0",
    "@soda-gql/swc-transformer": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@soda-gql/swc-transformer": {
      "optional": true
    }
  }
}

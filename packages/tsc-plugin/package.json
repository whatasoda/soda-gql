{
  "name": "@soda-gql/tsc-plugin",
  "version": "0.4.0",
  "description": "TypeScript compiler plugin for soda-gql",
  "type": "module",
  "private": false,
  "license": "MIT",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Shota Hatada",
    "email": "shota.hatada@whatasoda.me",
    "url": "https://github.com/whatasoda"
  },
  "keywords": [
    "graphql",
    "codegen",
    "zero-runtime",
    "typescript",
    "tsc",
    "plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/whatasoda/soda-gql.git",
    "directory": "packages/tsc-plugin"
  },
  "homepage": "https://github.com/whatasoda/soda-gql#readme",
  "bugs": {
    "url": "https://github.com/whatasoda/soda-gql/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "dependencies": {
    "@soda-gql/builder": "workspace:*",
    "@soda-gql/common": "workspace:*",
    "@soda-gql/config": "workspace:*",
    "@soda-gql/tsc-transformer": "workspace:*"
  },
  "peerDependencies": {
    "typescript": "5.*"
  },
  "exports": {
    ".": {
      "@soda-gql": "./@x-index.ts",
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"

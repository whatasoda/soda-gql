{
  "name": "@soda-gql/metro-plugin",
  "version": "0.11.2",
  "description": "Metro plugin for soda-gql (React Native)",
  "type": "module",
  "private": false,
  "license": "MIT",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Shota Hatada",
    "email": "shota.hatada@whatasoda.me",
    "url": "https://github.com/whatasoda"
  },
  "keywords": [
    "graphql",
    "codegen",
    "zero-runtime",
    "typescript",
    "metro",
    "react-native",
    "expo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/whatasoda/soda-gql.git",
    "directory": "packages/metro-plugin"
  },
  "homepage": "https://github.com/whatasoda/soda-gql#readme",
  "bugs": {
    "url": "https://github.com/whatasoda/soda-gql/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    "./transformer": {
      "@soda-gql": "./@x-transformer.ts",
      "types": "./dist/transformer.d.mts",
      "import": "./dist/transformer.mjs",
      "require": "./dist/transformer.cjs",
      "default": "./dist/transformer.mjs"
    },
    ".": {
      "@soda-gql": "./@x-index.ts",
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@ampproject/remapping": "^2.3.0",
    "@soda-gql/babel": "workspace:*",
    "@soda-gql/builder": "workspace:*",
    "@soda-gql/common": "workspace:*",
    "@soda-gql/config": "workspace:*"
  },
  "peerDependencies": {
    "metro": ">=0.70.0",
    "@soda-gql/swc": "workspace:*"
  },
  "peerDependenciesMeta": {
    "metro": {
      "optional": true
    },
    "metro-react-native-babel-transformer": {
      "optional": true
    },
    "@expo/metro-config": {
      "optional": true
    },
    "@react-native/metro-babel-transformer": {
      "optional": true
    },
    "@soda-gql/swc": {
      "optional": true
    }
  }
}

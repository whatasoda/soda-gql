{
  "name": "@soda-gql/swc-transformer",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Shota Hatada",
    "email": "shota.hatada@whatasoda.me",
    "url": "https://github.com/whatasoda"
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src/index.ts",
    "index.js",
    "index.d.ts",
    "*.node"
  ],
  "napi": {
    "name": "swc-transformer",
    "triples": {
      "defaults": true,
      "additional": [
        "aarch64-apple-darwin",
        "aarch64-unknown-linux-gnu",
        "aarch64-unknown-linux-musl",
        "x86_64-unknown-linux-musl"
      ]
    }
  },
  "scripts": {
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "build:dev": "bun run scripts/build-if-stale.ts",
    "prepublishOnly": "napi prepublish -t npm",
    "artifacts": "napi artifacts",
    "pretest": "bun run build:dev",
    "test": "bun test"
  },
  "dependencies": {
    "@soda-gql/builder": "workspace:*",
    "@soda-gql/common": "workspace:*",
    "@soda-gql/config": "workspace:*",
    "@soda-gql/core": "workspace:*",
    "@soda-gql/plugin-common": "workspace:*"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4",
    "@soda-gql/tsc-transformer": "workspace:*",
    "prettier": "^3.4.2"
  },
  "peerDependencies": {
    "@swc/core": "^1.0.0"
  },
  "exports": {
    ".": {
      "@soda-gql": "./@x-index.ts",
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./native": {
      "types": "./index.d.ts",
      "require": "./index.js",
      "default": "./index.js"
    },
    "./package.json": "./package.json"
  }
}

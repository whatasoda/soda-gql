{
  "name": "@soda-gql/builder",
  "version": "0.10.1",
  "description": "Static analysis and artifact generation for soda-gql",
  "type": "module",
  "private": false,
  "license": "MIT",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Shota Hatada",
    "email": "shota.hatada@whatasoda.me",
    "url": "https://github.com/whatasoda"
  },
  "keywords": [
    "graphql",
    "codegen",
    "zero-runtime",
    "typescript",
    "static-analysis",
    "build-tool"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/whatasoda/soda-gql.git",
    "directory": "packages/builder"
  },
  "homepage": "https://github.com/whatasoda/soda-gql#readme",
  "bugs": {
    "url": "https://github.com/whatasoda/soda-gql/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "@soda-gql": "./@x-index.ts",
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@soda-gql/common": "workspace:*",
    "@soda-gql/core": "workspace:*",
    "@swc/core": "^1.6.3",
    "@swc/types": "^0.1.6",
    "fast-glob": "^3.3.3",
    "neverthrow": "^8.1.1",
    "typescript": "^5.0.0",
    "xxhash-wasm": "^1.1.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@soda-gql/config": "workspace:*"
  }
}

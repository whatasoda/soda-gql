{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "customConditions": [
      "@soda-gql"
    ],
    "outDir": "../../node_modules/.soda-gql/.typecheck/builder",
    "tsBuildInfoFile": "../../node_modules/.soda-gql/.typecheck/builder/tsconfig.tsbuildinfo"
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "@x-*.ts",
    "@devx-*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/graphql-system/index.cjs",
    "test/fixtures/**/*"
  ],
  "references": [
    {
      "path": "../common/tsconfig.editor.json"
    },
    {
      "path": "../core/tsconfig.editor.json"
    }
  ]
}

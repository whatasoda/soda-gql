{
  "name": "@soda-gql/config",
  "version": "0.1.0",
  "description": "Centralized configuration loader and helpers for soda-gql tooling.",
  "type": "module",
  "license": "MIT",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./loader": {
      "types": "./src/loader.ts",
      "import": "./src/loader.ts",
      "default": "./src/loader.ts"
    },
    "./path-resolver": {
      "types": "./src/path-resolver.ts",
      "import": "./src/path-resolver.ts",
      "default": "./src/path-resolver.ts"
    },
    "./helper": {
      "types": "./src/helper.ts",
      "import": "./src/helper.ts",
      "default": "./src/helper.ts"
    },
    "./validator": {
      "types": "./src/validator.ts",
      "import": "./src/validator.ts",
      "default": "./src/validator.ts"
    },
    "./errors": {
      "types": "./src/errors.ts",
      "import": "./src/errors.ts",
      "default": "./src/errors.ts"
    },
    "./defaults": {
      "types": "./src/defaults.ts",
      "import": "./src/defaults.ts",
      "default": "./src/defaults.ts"
    },
    "./test-utils": {
      "types": "./src/test-utils.ts",
      "import": "./src/test-utils.ts",
      "default": "./src/test-utils.ts"
    },
    "./package.json": "./package.json",
    "./tsconfig.json": "./tsconfig.json"
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bunx tsc -p tsconfig.json",
    "test": "bun test"
  },
  "dependencies": {
    "esbuild": "^0.25.10",
    "neverthrow": "^8.2.0",
    "zod": "^4.1.11"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "engines": {
    "bun": ">=1.1.0"
  }
}

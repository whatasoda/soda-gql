{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "strict": false,
    "noImplicitAny": false,
    "baseUrl": "..",
    "paths": {
      "@soda-gql/core": ["packages/core/src/index.ts"],
      "@soda-gql/core/*": ["packages/core/src/*"],
      "@soda-gql/runtime": ["packages/runtime/src/index.ts"],
      "@soda-gql/builder": ["packages/builder/src/index.ts"],
      "@soda-gql/codegen": ["packages/codegen/src/index.ts"],
      "@soda-gql/babel-plugin": ["packages/babel-plugin/src/index.ts"]
    }
  },
  "include": ["fixtures/**/*", "codegen-fixture/**/*"],
  "exclude": ["node_modules", "dist", "build", "../packages/**/*", "fixtures/babel-plugin/**/source.ts"]
}

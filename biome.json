{
  "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 130
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedImports": "error",
        "noUnusedPrivateClassMembers": "off"
      },
      "style": {
        "useConst": "error",
        "useTemplate": "error"
      },
      "complexity": {
        "noBannedTypes": "off",
        "noUselessCatch": "off"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noAssignInExpressions": "off",
        "noConfusingVoidType": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all",
      "arrowParentheses": "always"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "files": {
    "includes": [
      "./tsdown.config.ts",
      "packages/**/*",
      "examples/**/*",
      "**/tests/**/*",
      "scripts/prepublish.ts",
      "!bun.lock",
      "!**/node_modules/**/*",
      "!**/dist/**/*",
      "!**/tests/.tmp/**/*",
      "!**/.typecheck/**/*",
      "!**/.cache/**/*"
    ],
    "ignoreUnknown": false
  },
  "overrides": [
    {
      "includes": [
        "**/*.test.ts",
        "**/*.spec.ts",
        "tests/**/*.ts",
        "packages/core/src/types/**/*.ts",
        "packages/core/src/utils/**/*.ts"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": ["tests/fixtures/**/*"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedImports": "off"
          }
        }
      }
    },
    {
      "includes": ["examples/nestjs-compiler-tsc/**/*"],
      "linter": {
        "rules": {
          "style": {
            "useImportType": "off"
          },
          "correctness": {
            "noUnusedVariables": "off"
          }
        }
      }
    }
  ]
}

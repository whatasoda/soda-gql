{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-extension"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/vscode-extension/dist/**/*.js"
      ],
      "preLaunchTask": "build:extension"
    },
    {
      "name": "Attach to LSP Server",
      "type": "node",
      "request": "attach",
      "port": 6009,
      "restart": true,
      "outFiles": [
        "${workspaceFolder}/packages/lsp/dist/**/*.mjs"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Launch Extension + Attach LSP",
      "configurations": ["Launch Extension", "Attach to LSP Server"]
    }
  ]
}

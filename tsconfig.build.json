{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "customConditions": ["@soda-gql"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": false,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["packages/*/src/**/*"],
  "exclude": [
    "node_modules",
    "**/build/**/*",
    "**/coverage/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**/*",
    "**/test/**/*",
    "**/tests/**/*",
    "**/dist/**/*",
    "**/scripts/**/*",
    "**/playgrounds/**/*"
  ]
}

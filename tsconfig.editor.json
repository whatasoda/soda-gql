{
  "extends": ["./tsconfig.json", "./tsconfig.base.json"],
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "customConditions": ["@soda-gql"],
    "outDir": "node_modules/.soda-gql/.typecheck/root",
    "tsBuildInfoFile": "node_modules/.soda-gql/.typecheck/root/tsconfig.tsbuildinfo",
    "rootDir": "."
  },
  "include": ["package.json", "tests/**/*", "scripts/**/*", "perf-measures/**/*", "packages/cli/test/utils/cli.ts"],
  "exclude": [
    "node_modules",
    "**/dist/**/*",
    "**/.tmp/**/*",
    "perf-measures/type-check/client.ts",
    "perf-measures/codegen-typecheck/**/*",
    "perf-measures/**/generated/**/*",
    "perf-measures/**/fixtures/**/*"
  ],
  "references": [
    { "path": "./packages/babel/tsconfig.editor.json" },
    { "path": "./packages/builder/tsconfig.editor.json" },
    { "path": "./packages/cli/tsconfig.editor.json" },
    { "path": "./packages/codegen/tsconfig.editor.json" },
    { "path": "./packages/colocation-tools/tsconfig.editor.json" },
    { "path": "./packages/common/tsconfig.editor.json" },
    { "path": "./packages/config/tsconfig.editor.json" },
    { "path": "./packages/core/tsconfig.editor.json" },
    { "path": "./packages/formatter/tsconfig.editor.json" },
    { "path": "./packages/metro-plugin/tsconfig.editor.json" },
    { "path": "./packages/runtime/tsconfig.editor.json" },
    { "path": "./packages/sdk/tsconfig.editor.json" },
    { "path": "./packages/swc/tsconfig.editor.json" },
    { "path": "./packages/tsc/tsconfig.editor.json" },
    { "path": "./packages/typegen/tsconfig.editor.json" },
    { "path": "./packages/vite-plugin/tsconfig.editor.json" },
    { "path": "./packages/webpack-plugin/tsconfig.editor.json" },
    { "path": "./playgrounds/expo-metro/tsconfig.editor.json" },
    { "path": "./playgrounds/nestjs-compiler-tsc/tsconfig.editor.json" },
    { "path": "./playgrounds/nextjs-webpack/tsconfig.editor.json" },
// TODO: Fix colocation-tools type inference with generated schemas
    // { "path": "./playgrounds/vite-react/tsconfig.editor.json" }
  ]
}

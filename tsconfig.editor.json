{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": ".typecheck/root",
    "tsBuildInfoFile": ".typecheck/root/tsconfig.tsbuildinfo",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/graphql-system": ["./tests/fixtures/runtime-app/graphql-system/index.ts"],
      "@soda-gql/builder/*": ["./packages/builder/src/*"],
      "@soda-gql/cli/*": ["./packages/cli/src/*"],
      "@soda-gql/codegen/*": ["./packages/codegen/src/*"],
      "@soda-gql/common/portable": ["./packages/common/src/portable/index.ts"],
      "@soda-gql/common/*": ["./packages/common/src/*"],
      "@soda-gql/config/*": ["./packages/config/src/*"],
      "@soda-gql/core/*": ["./packages/core/src/*"],
      "@soda-gql/plugin-babel/*": ["./packages/plugin-babel/src/*"],
      "@soda-gql/plugin-nestjs/*": ["./packages/plugin-nestjs/src/*"],
      "@soda-gql/plugin-shared/*": ["./packages/plugin-shared/src/*"],
      "@soda-gql/runtime/*": ["./packages/runtime/src/*"]
    }
  },
  "include": ["tests/**/*", "scripts/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    ".typecheck",
    "tests/.tmp/**/*",
    ".tmp/**/*",
    "tests/fixtures/plugin-babel/**/source.ts"
  ],
  "references": [
    { "path": "./packages/builder/tsconfig.editor.json" },
    { "path": "./packages/cli/tsconfig.editor.json" },
    { "path": "./packages/codegen/tsconfig.editor.json" },
    { "path": "./packages/common/tsconfig.editor.json" },
    { "path": "./packages/config/tsconfig.editor.json" },
    { "path": "./packages/core/tsconfig.editor.json" },
    { "path": "./packages/plugin-babel/tsconfig.editor.json" },
    { "path": "./packages/plugin-nestjs/tsconfig.editor.json" },
    { "path": "./packages/plugin-shared/tsconfig.editor.json" },
    { "path": "./packages/runtime/tsconfig.editor.json" }
  ]
}
